<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordingView"
    android:background="@drawable/background_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewRecordingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight=".07"
            android:background="@color/colorText"
            android:hint="  Recording Name"
            android:text=""
            android:textSize="20dp"
            android:singleLine="true" />

        <ToggleButton
            android:id="@+id/buttonRecording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight=".01"
            android:drawableRight="@mipmap/record_recording"
            android:onClick="onClickButtonRecord"
            android:text="Start Recording"
            android:textOff="Press To Start Recording"
            android:textOn="Press To Stop Recording"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewRecordingLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:text="Recording Length"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:text="Recording Location"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ImageViewQuickShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            app:srcCompat="@color/colorPrimaryDark"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/buttonGoToSpectrumViewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight=".02"
            android:enabled="false"
            android:onClick="onClickButtonViewSpectrum"
            android:text="View Recorded Spectrum"
            android:textSize="15dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>